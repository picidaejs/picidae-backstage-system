{
  "env": {
    "browser": {
      "plugins": [
        "react-hot-loader/babel",
        [
          "tiny-import",
          {
            "test": "material-ui",
            "moduleMapper": "",
            "easyModuleMapper": { "enable": false }
          }
        ],
        [
          "tiny-import",
          {
            "test": "lodash",
            "moduleMapper": "",
            "easyModuleMapper": { "enable": false }
          }
        ]
      ]
    }
  },
  "presets": [
    [
      "env",
      {
        "targets": {
          "node": "6.10",
          "browsers": ["last 2 versions"]
        },
        "loose": true,
        "useBuiltIns": true
      }
    ],
    "react"
  ],
  "plugins": [
    "transform-decorators-legacy",
    "transform-class-properties",
    "transform-object-rest-spread",
    [
      "transform-runtime",
      {
        "polyfill": false,
        "regenerator": true
      }
    ]
  ],
  "ignore": [
    "public/**",
    "database/*.json"
  ]
}
