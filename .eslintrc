{
  "extends": "eslint:recommended",
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],

    "comma-dangle": ["error", "never"],
    "no-cond-assign": ["error", "always"],

    "no-console": "off"
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "env": { "browser": true, "node": true }
}